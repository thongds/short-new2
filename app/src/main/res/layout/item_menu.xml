    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="80dp"

    >
    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/icon_menu_left"
        android:layout_alignParentLeft="true"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/icon_helm"/>
    <TextView
        android:id="@+id/menu_title"
        android:layout_centerVertical="true"
        android:singleLine="true"
        android:layout_marginLeft="16dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/icon_menu_left"
        android:layout_alignBottom="@id/icon_menu_left"
        android:layout_alignTop="@id/icon_menu_left"
        android:text="Social/crime/goverment"
        android:textColor="@color/colorBlack"
        android:textSize="20sp"/>
