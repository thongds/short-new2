<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:clickable="true"
        android:layout_centerInParent="true"
        android:layout_width="250dp"
        android:layout_height="wrap_content">

        <Button
            android:clickable="true"
            android:id="@+id/btn_beginner"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:textColor="@color/colorWhite"
            android:text="Beginner"
            android:background="@drawable/btn_main_fragment"
            android:layout_alignParentTop="true" />
        <Button
            android:layout_marginTop="10dp"
            android:layout_below="@id/btn_beginner"
            android:id="@+id/btn_intermedia"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Intermedia"
            android:textColor="@color/colorWhite"
            android:background="@drawable/btn_main_fragment"/>
        <Button
            android:layout_marginTop="10dp"
            android:layout_below="@id/btn_intermedia"
            android:id="@+id/btn_advance"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:textColor="@color/colorWhite"
            android:text="Advance"
            android:background="@drawable/btn_main_fragment"/>


    </RelativeLayout>

</RelativeLayout>