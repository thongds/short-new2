<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Inactive tab -->
    <item android:drawable="@drawable/blur_button_background" android:state_focused="false" android:state_pressed="false"/>
    <!-- Pressed tab -->
    <item android:drawable="@drawable/blur_button_background_clicked" android:state_pressed="true"/>
    <!-- Selected tab (using d-pad) -->
    <item android:drawable="@drawable/blur_button_background_clicked" android:state_focused="true" android:state_pressed="false" />

</selector>